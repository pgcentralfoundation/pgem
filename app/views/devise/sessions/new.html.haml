.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            Sign In
        .panel-body
          .tab-content
            .tab-pane{role: 'tabpanel', id: 'signin'}
              = link_to('#signin-email', role: 'tab', 'aria-controls' => 'home', 'data-toggle' => 'tab', 'class' => 'text-info') do
                Sign-in with email

              = semantic_form_for(resource, as: :user, url: session_path(:user)) do |f|
                = f.input :login
                = f.input :password
                .row
                  .col-md-9
                    %p.text-left
                      Don't have an account?
                      = link_to 'Sign Up', new_registration_path('user')
                  .col-md-3
                    %p.text-right
                      = f.action :submit, as: :button, label: '  Sign In  ', button_html: {class: 'btn btn-success btn-block'}
                    %p.text-right
                      - if devise_mapping.rememberable?
                        = f.label 'Remember me'
                        = f.check_box :remember_me

            .tab-pane.active{role: 'tabpanel', id: 'signin-email'}
              = link_to('#signin', role: 'tab', 'aria-controls' => 'home', 'data-toggle' => 'tab', 'class' => 'text-info') do
                Sign-in with password
              = semantic_form_for(resource, as: :passwordless_user, url: passwordless_user_session_path) do |f|
                = f.input :email
                .row
                  .col-md-9
                    %p.text-left
                      Don't have an account?
                      = link_to 'Sign Up', new_registration_path('user')
                  .col-md-3
                    %p.text-right
                      = f.action :submit, as: :button, label: '  Sign In  ', button_html: {class: 'btn btn-success btn-block'}
                    %p.text-right
                      - if devise_mapping.rememberable?
                        = f.label 'Remember me'
                        = f.check_box :remember_me

          = render partial: 'devise/shared/openid'
          = render partial: 'devise/shared/help'
