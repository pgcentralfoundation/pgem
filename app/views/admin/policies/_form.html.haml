.row
  .col-md-12
    .page-header
      %h1
        -if @policy.new_record?
          New Policy
        - else
          Edit Policy
          = @policy.title
        
.row
  .col-md-12
    = semantic_form_for(@policy, url: admin_conference_policies_path(@conference.short_title), method: :post) do |f|
      = f.input :title
      - if current_user.is_admin?
        = f.input :global, label: 'Make Global',
                  hint: '(Global policies are available for selection to all conferences)', disabled: !current_user.is_admin?
      = f.input :description, input_html: { rows: 5, cols: 20, data: { provide: 'markdown-editable' } }, hint: markdown_hint
      = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }